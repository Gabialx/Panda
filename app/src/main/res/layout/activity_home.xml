<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eu.ynalbantov.android.panda.visit.vratsa.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewApplicationName"
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />

        <RelativeLayout
            style="@style/category_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradient1">

            <ImageView
                android:id="@+id/imageViewCategory1"
                style="@style/category_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon1" />

            <TextView
                android:id="@+id/textViewCategory1"
                style="@style/category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/imageViewCategory1"
                android:text="@string/main_category1" />
        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="4sp">

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c01i01"
                    android:clickable="true"
                    android:onClick="onHistoryClick"
                    android:text="@string/main_category1_item1" />

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c01i02"
                    android:clickable="true"
                    android:onClick="onNatureClick"
                    android:text="@string/main_category1_item2" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c01i03"
                    android:clickable="true"
                    android:onClick="onNearByClick"
                    android:text="@string/main_category1_item3" />

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c01i04"
                    android:clickable="true"
                    android:onClick="onFunClick"
                    android:text="@string/main_category1_item4" />
            </TableRow>
        </TableLayout>

        <RelativeLayout
            style="@style/category_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradient2">

            <ImageView
                android:id="@+id/imageViewCategory2"
                style="@style/category_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon2" />

            <TextView
                android:id="@+id/textViewCategory2"
                style="@style/category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/imageViewCategory2"
                android:text="@string/main_category2" />
        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="4sp">

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c02i01"
                    android:clickable="true"
                    android:onClick="onCafesClick"
                    android:text="@string/main_category2_item1" />

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c02i02"
                    android:clickable="true"
                    android:onClick="onRestaurantsClick"
                    android:text="@string/main_category2_item2" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c02i03"
                    android:clickable="true"
                    android:onClick="onHotelsClick"
                    android:text="@string/main_category2_item3" />

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c02i04"
                    android:clickable="true"
                    android:onClick="onNightlifeClick"
                    android:text="@string/main_category2_item4" />
            </TableRow>
        </TableLayout>

        <RelativeLayout
            style="@style/category_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradient3">

            <ImageView
                android:id="@+id/imageViewCategory3"
                style="@style/category_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon3" />

            <TextView
                android:id="@+id/textViewCategory3"
                style="@style/category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/imageViewCategory3"
                android:text="@string/main_category3" />
        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="4sp">

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c03i01"
                    android:clickable="true"
                    android:onClick="onBusesClick"
                    android:text="@string/main_category3_item1" />

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c03i02"
                    android:clickable="true"
                    android:onClick="onTrainsClick"
                    android:text="@string/main_category3_item2" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="4sp">

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c03i03"
                    android:clickable="true"
                    android:onClick="onTaxisClick"
                    android:text="@string/main_category3_item3" />

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c03i04"
                    android:clickable="true"
                    android:onClick="onRentClick"
                    android:text="@string/main_category3_item4" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c03i05"
                    android:clickable="true"
                    android:onClick="onShuttlesClick"
                    android:text="@string/main_category3_item5" />

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c03i06"
                    android:clickable="true"
                    android:onClick="onTrolleybusesClick"
                    android:text="@string/main_category3_item6" />
            </TableRow>
        </TableLayout>

        <RelativeLayout
            style="@style/category_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradient4">

            <ImageView
                android:id="@+id/imageViewCategory4"
                style="@style/category_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon4" />

            <TextView
                android:id="@+id/textViewCategory4"
                style="@style/category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/imageViewCategory4"
                android:text="@string/main_category4" />
        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="4sp">

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c04i01"
                    android:clickable="true"
                    android:onClick="onEmergencyClick"
                    android:text="@string/main_category4_item1" />

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c04i02"
                    android:clickable="true"
                    android:onClick="onWiFiClick"
                    android:text="@string/main_category4_item2" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="4sp">

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c04i03"
                    android:clickable="true"
                    android:onClick="onShopsClick"
                    android:text="@string/main_category4_item3" />

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c04i04"
                    android:clickable="true"
                    android:onClick="onMunicipalityClick"
                    android:text="@string/main_category4_item4" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/image_text"
                    android:layout_width="0dp"
                    android:layout_height="150sp"
                    android:layout_gravity="start"
                    android:background="@drawable/c04i05"
                    android:clickable="true"
                    android:onClick="onParkClick"
                    android:text="@string/main_category4_item5" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/buttonShare"
            style="@style/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:text="@string/share" />
    </LinearLayout>
</ScrollView>
