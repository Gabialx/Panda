<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="category_layout">
        <item name="android:background">#777777</item>
        <item name="android:padding">8sp</item>

        <item name="android:strokeWidth">1sp</item>
        <!--<item name="android:layout_margin">8sp</item>-->
    </style>

    <style name="category_image">
    </style>

    <style name="category_text">
        <!--<item name="android:background">#FFFFFF</item>-->
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">4sp</item>
    </style>

    <style name="image">
        <item name="android:padding">4sp</item>
    </style>

    <style name="subtitle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:padding">8sp</item>
    </style>

    <style name="text">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">8sp</item>
    </style>

    <style name="composition">
        <item name="android:padding">16sp</item>
        <item name="android:layout_margin">8sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:shape">oval</item>
        <item name="android:bottom">3sp</item>
        <item name="android:elevation">1sp</item>
    </style>



    <style name="caption">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryInverter</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingTop">16sp</item>
    </style>
</resources>